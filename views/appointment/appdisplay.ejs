<p class="font-weight-bold mt-2">Appointment ID:</p>
<p class="displayAppId"><%= renderData.app_id %></p>
<a href="#delete" class="btn btn-danger" data-toggle="modal">DELETE ENTIRE APPOINTMENT</a>
<p class="font-weight-bold mt-5">Current Time:</p>
<p class="displayAppTime"><%= renderData.app_time %></p>
<p class="font-weight-bold">New Time:</p>
<select type="text" class="form-control" id="app_time">
    <option>9.00 - 12.00</option>
    <option>13.30 - 16.30</option>
    <option>9.00 - 12.00 and 13.30 - 16.30</option>
</select>
<button type="button" class="btn btn-primary mt-2" id="btnTime">Change Time</button>
<p class="font-weight-bold mt-5">Current Location:</p>
<p class="displayAppLo"><%= renderData.app_location %></p>
<p class="font-weight-bold">New Time:</p>
<select type="text" class="form-control" id="app_location" name="app_location">
    <option>First floor, CL Center</option>
    <option>First floor, MSM building</option>
    <option>First floor, MSE building</option>
    <option>AU Mall</option>
    <option>Jhon Paul II Sport Center</option>
</select>
<button type="button" class="btn btn-primary mt-2" id="btnLo">Change Location</button>
</div>
<!-- Delete Modal-->
<div class="modal fade" id="delete">
    <div class="modal-dialog modal-lg" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Please confirm before deleting appointment</h5>
                <button type="button" class="close" data-dismiss="modal">&times;</button>
            </div>
            <div class="modal-body">
                <h6>Are you fully intend to delete the appointment?</h6>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary" data-dismiss="modal" id="btnDelete">Confirm</button>
                <button type="button" class="btn btn-danger" data-dismiss="modal">Cancel</button>
            </div>
        </div>
    </div>
</div>