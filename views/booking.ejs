<script>
    $(document).ready(function () {
        //notificaiotn
        const noti = document.getElementById('noti')
        axios.get('user/noti').then((response) => {
            console.log(response.data)
            noti.innerHTML = response.data
        });
        //Display app card
        axios.get('/appointment/appcard').then((response) => {
            appcard.innerHTML = response.data;
        });
        
        window.book = async (appId) => {
            const { data } = await axios.post("/appointment/appbook", {
                    app_id: appId,
            }).then((response) => {
                console.log(response);
                alert(response.data.data);
                window.location.reload();
            });
        }
    });



</script>